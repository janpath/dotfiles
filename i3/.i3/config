bindsym Mod4+m exec emacsclient -c -n -e '(progn (delete-other-windows) (gnus))'
bindsym Mod4+p exec pavucontrol --class '[f] pavucontrol'
bindsym Mod4+e exec emacsclient -c -n -e '(progn (delete-other-windows) (spacemacs/home))'

